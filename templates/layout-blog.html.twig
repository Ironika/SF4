{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('build/css/blog.css') }}">
{% endblock %}

{% block body %}

<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92">
	<h2 class="ltext-105 cl0 txt-center">
		Blog
	</h2>
</section>	

{% block breadcrumb %}{% endblock %}

<!-- Content page -->
<section class="bg0 p-t-62 p-b-60">
	<div class="container">
		<div class="row layout-blog">
			<div class="col-md-8 col-lg-9 p-b-80">
				{% block blog %}{% endblock %}
			</div>

			<div class="col-md-4 col-lg-3 p-b-80 blog-side-menu">
				<div class="side-menu">
					
					<div class="p-t-50">
						<h4 class="mtext-112 cl2 p-b-27">
							Tags
						</h4>

						<div class="flex-w m-r--5">
							{% for tag in tags %}
						        <a href="{{ path('blog', {tag: tag.id}) }}" class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5">
									{{ tag.name }}
								</a>
						    {% endfor %}
						</div>
					</div>

					<div class="p-t-65">
						<h4 class="mtext-112 cl2 p-b-33">
							Last Products
						</h4>

						<ul>
							{% for product in products %}
								<li class="flex-w flex-t p-b-30">
									<a href="{{ path('product_detail', {id : product.id}) }}" class="wrao-pic-w size-214 hov-ovelay1 m-r-20">
										{% for img in product.gallery.galleryHasMedias %}
											{% if loop.index == 1 %}
											    <img src="{% path img.media, 'small' %}" alt="{{ product.name }}">
											{% endif %}
										{% endfor %}
									</a>

									<div class="size-215 flex-col-t p-t-8">
										<a href="#" class="stext-116 cl8 hov-cl1 trans-04">
											{{ product.name }}
										</a>

										<span class="stext-116 cl6 p-t-20">
											${{ product.price }}
										</span>
									</div>
								</li>
						    {% endfor %}
						</ul>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>	
{% endblock %}
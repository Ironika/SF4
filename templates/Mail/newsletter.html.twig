<div style="text-align:center;margin-top: 30px;">
	<img style="width: 300px; margin:auto" src="{{ absolute_url(asset('images/logo.png')) }}">
</div>

<h3 style="text-align:center;background-color:black;color:white; width:80%; margin: auto; padding: 10px;">{{ title }}</h3>

<div style="text-align:center;">
	{{ content|raw }}
</div>

{% for product in products %}
	<div style="display:inline-block;width:200px;padding:10px;">
		<a href="{{ url('product_detail', {slug : product.slug})}}">
			{% if product.gallery %}
				{% for img in product.gallery.galleryHasMedias %}
					{% if loop.index == 1 %}
					    <img src="{{app.request.scheme ~ '://' ~ app.request.host}}{% path img.media, 'reference' %}" alt="{{ product.name }}" style="width:100%; object-fit:cover;">
					{% endif %}
				{% endfor %}
			{% endif %}
			<div style="padding: 10px 0;">
				<span style="float:left; color: black;">
					{{ product.name }}
				</span>
				<span style="float:right; color: black;">
					${{ product.price }}
				</span>
			</div>
		</a>
	</div>
{% endfor %}

<div style="text-align:center;margin-top: 35px;">
	<a href="{{ url('products')}}" style="padding:10px 20px; background-color:black; color: white;border-radius: 20px;">Shop now</a>
</div>